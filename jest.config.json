{
  "globals": {
    "window": true
  },
  "collectCoverageFrom": ["src/**/*.{ts,tsx}"],
  "coverageDirectory": "out/coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "__fixtures__",
    "constants.ts",
    "declarations.d.ts",
    "jestHelpers.ts",
    "state.ts",
    "typeDefs.ts",
    "allEntitiesTypes.ts",
    "appTypes.ts",
    "clientsTypes.ts",
    "credentialsTypes.ts",
    "projectsTypes.ts",
    "reduxTypes.ts",
    "tagsTypes.ts",
    "tasksTypes.ts",
    "timeEntriesTypes.ts",
    "userGroupsTypes.ts",
    "usersTypes.ts",
    "workspacesTypes.ts",
    "components/index.tsx"
  ],
  "coverageReporters": ["lcov"],
  "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx"],
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/src/$1"
  },
  "roots": ["<rootDir>/src/"],
  "setupFilesAfterEnv": ["<rootDir>/src/setupJest.ts"],
  "snapshotSerializers": ["@emotion/jest/serializer"],
  "testEnvironment": "jsdom",
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.ts?(x)",
    "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
  ],
  "testPathIgnorePatterns": ["<rootDir>/scripts/runTests.js"],
  "testURL": "http://localhost"
}
